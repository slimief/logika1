#include <stdio.h> 
#include <stdlib.h> 
#include <conio.h> 
#include <time.h> 
#include <iostream> 
int main(){ 
setlocale(LC_ALL, "Russian"); 
int a[10]; 
srand(time(NULL)); 
for(int i = 0; i < sizeof(a)/sizeof(a[0]); i++){
a[i] = (rand() % 100) – 50;
} 
printf("Сгенерированный массив:\n"); 
for(int i = 0; i < sizeof(a)/sizeof(a[0]); i++){
 printf("%d ", a[i]); 
}
 _getch(); 
}
